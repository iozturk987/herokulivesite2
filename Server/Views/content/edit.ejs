<div class="container">
    <h1 class="col-lg-6 col-md-10 col-sm-10"><%= title %> Movie</h1>
    <hr>
    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
      <form method="POST" class="col-lg-6 col-md-10 col-sm-10">

        <div class="input-group mb-3">
          <span class="input-group-text">Movie Name</span>
          <input id="Name" name="Name" type="text" class="form-control" 
          value="<%= contact.Name %>"
          aria-label="Contact Name" aria-describedby="Contact Name Input" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Director Name</span>
            <input id="Number" name="Number" type="text" class="form-control" 
            value="<%= movie.Number %>"
            aria-label="Contact Number" aria-describedby="Contact Number Input" required>
          </div>

        <div class="input-group mb-3">
        <span class="input-group-text">Year Released</span>
        <input id="Email" name="Email" type="text" class="form-control" 
        value="<%= movie.Email %>"
        aria-label="Contact Email" aria-describedby="Contact Email Input" required>
        </div>
        
        <% if(title == "Edit") { %>
        <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
        <% } else {%>
        <button id="addButton" type="submit" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
        <% } %>  

        <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
      
      </form>

    </div>
</div>
